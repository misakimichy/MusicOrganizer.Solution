@{
    Layout = "_Layout";
}

@using MusicOrganizer.Models;

<h1>Records</h1>
@if (Model.Count == 0)
{
  <p>There are no records in the list.</p>
}

  @foreach (Record record in Model)
  {
    <p><a href='/records/@record.Id'>@record.Title</a></p>
  }


<div class="btn-container">
  <a href="/records/new" class="btn btn-info">Add a new record</a>
  <form action="/records/delete" method="post">
    <button class="btn btn-danger" type="submit" name="button">Clear All Records</button>
  </form>
  <a href="/" class="btn btn-secondary">Go home</a>
</div>
