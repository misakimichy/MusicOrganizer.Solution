@{
  Layout = "_Layout";
}

<h1>Add a New Record</h1>
<div class="container">
  <form action="/records" method="post">
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="title">Enter a new record:</label>
        <input class="form-control" id="title" name="title" type="text" placeholder="Record name...">
      </div>
      <div class="form-group col-md-6">
        <label for="name">Enter an artist name:</label>
        <input class="form-control" id="name" name="name" type="text" placeholder="Artist name...">
      </div>
    </div>
      <button class="btn btn-info" type="submit">Submit</button>
  </form>
</div>