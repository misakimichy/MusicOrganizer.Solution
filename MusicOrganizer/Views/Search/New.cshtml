@{
  Layout = "_Layout";
}
<h1>Search by artist</h1>
<div class="container">
  <form action="/search_by_artist" method="post">
    <div class="form-group">
      <label for="name">Enter an artist name or part of artist name:</label>
      <input class="form-control" id="name" name="name" type="text" placeholder="Search by artist name...">
    </div>
    <button class="btn btn-info" type="submit">Submit</button>
  </form>
</div>