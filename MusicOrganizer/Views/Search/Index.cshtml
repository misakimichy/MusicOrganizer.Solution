@{
    Layout = "_Layout";
}
@using MusicOrganizer.Models;
@if (@Model.Count == 0)
{
    <h3>No artist have been found!</h3>
}
else
{
    <h1>Here is your search result:</h1>
        @foreach (Artist artist in Model)
        {
            <p><a href="/artists/@artist.Id">@artist.Name</a></p>
        }
}

<div class="btn-container">
    <a href="/search_by_artist/new" class="btn btn-info">Search another artist</a>
    <a href="/" class="btn btn-secondary">Go home</a>
</div>
